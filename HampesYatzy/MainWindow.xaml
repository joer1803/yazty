<Window x:Class="HampesYatzy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HampesYatzy"
        mc:Ignorable="d"
        Title="Meny" Height="900" Width="1800">
    <Grid Margin="0,0,-7.667,-6.667" Background="#FF389355" ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="5">
            <Button x:Name="Btn_classic" Height="30" Content="Spela styrd yatzy" Click="Btn_classic_Click"/>
            <Button x:Name="Btn_steerd" Height="30" Content="Spela klassisk yatzy" Click="Btn_steerd_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5">
            <Menu IsMainMenu="True" Height="20" Margin="0 0 0.333 0" FontSize="12">
                <MenuItem Header="Meny" Click="MenuItem_Click" />
                <MenuItem Header="Topplista" Click="MenuItem_Click_1"/>
                <MenuItem Header="Skapa användare" Click="MenuItem_Click_2"/>
            </Menu>
        </StackPanel>
        
     
        <Label Content="Tillgängliga spelare" Width="auto" Grid.Column="1" Grid.Row="3" FontSize="16"/>
        <ListView x:Name="lstAvailable" Grid.Column="1" Grid.Row="4" Height="360">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Spelare" Width="auto"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>

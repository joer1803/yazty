            <TextBlock x:Name="playerOne_yatzy" Text="{Binding Path = Player.ScoreSheet.Yatzy}" Height="34" Width="34"/>
            <TextBlock x:Name="playerOne_total" Text="{Binding Path = Player.ScoreSheet.Score}" Height="34"/>

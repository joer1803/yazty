<Window x:Class="HampesYatzy.Play"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HampesYatzy"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="Spela" Height="900" Width="1800">
    <Grid Background="#FF389355">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="112*"/>
            <ColumnDefinition Width="112*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="122*"/>
            <RowDefinition Height="324*"/>
            <RowDefinition Height="401*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Menu IsMainMenu="True">
                <MenuItem Header="Meny" Click="MenuItem_Click_1"></MenuItem>
                <MenuItem Header="Topplista" Click="MenuItem_Click"></MenuItem>
                <MenuItem Header="Skapa användare" Click="MenuItem_Click_2"></MenuItem>
            </Menu>
        </StackPanel>
        <Button x:Name="button" Content="Stäng" Grid.Column="3" HorizontalAlignment="Left" Margin="342.333,0,0,0" VerticalAlignment="Top" Width="106" Height="43" Click="Button_Click"/>
        <Image x:Name="dice1" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="148" Margin="189.333,175.333,111.333,78" Width="148"/>
        <Image x:Name="dice2" Grid.Column="3" Grid.Row="2" Margin="41.333,253.333,259.333,0" Width="148" Height="148"/>
        <Image x:Name="dice3" Grid.Column="2" Grid.Row="2" Margin="238.333,253.333,61.667,0" Width="148" Height="148"/>
        <Image x:Name="dice4" Grid.Column="2" Grid.Row="2" Margin="0.333,253.333,299.667,0" Width="148" Height="148"/>
        <Image x:Name="dice5" Grid.Column="1" Grid.Row="2" Margin="64.333,253.333,79.667,0" Width="148" Height="148"/>
            
       
    </Grid>
</Window>
